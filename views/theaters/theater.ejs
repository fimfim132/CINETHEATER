<%- include('../partials/header.ejs') %>
<div class="container-head">
    <h1>movie: <%= showtime.movie.name %></h1>
    <h1>Theater: <%= theater.name %></h1>
</div>
  <div class="container-theater">

        <div class="screen">
            <h2 class="screens">SCREEN</h2>
        </div>
        <div class="text-center">
            <form action="/cinemas/<%= cinema._id %>/theater/<%= theater._id %>/<%= showtime._id %>/seat" method="POST">
                <div class="row justify-content-center">
                    <input name="cinema" value="<%= cinema.name %>" class="invisible">
                    <input name="movie" value="<%= showtime.movie.name %>" class="invisible">
                    <input name="theater" value="<%= theater.name %>" class="invisible">
                    <input name="date" value="<%= showtime.date %>" class="invisible">
                    <input name="time" value="<%= showtime.time %>" class="invisible">
                    <input name="name" value="<%= currentUser.username %>" class="invisible">
                    <% showtime.seat.forEach(function(seat){ %>
                        <% if(seat.available){%>
                            <input name="seat" type="checkbox" value="<%= seat.seatnum %>" id="seat" class="seat">
                            <% } else { %>
                            <input name="seat" type="checkbox" value="<%= seat.seatnum %>" id="seat" class="seat" disabled checked>
                            <% } %>
                    <% }); %>
                </div>
                <input type="submit">
            </form>
        </div>   
    </div>
<%- include('../partials/footer.ejs') %>