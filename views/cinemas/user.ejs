<%- include('../partials/header.ejs') %>
    <div class="container">
            <% cinema.theaters.forEach(function(theater){ %>
                <% if(theater.showtime.length !=0){ %>  
<div class="top100"> 
            <h1>Theater <%= theater.name %></h1>
            
            <% theater.showtime.forEach(function(showtime){ %>
        <div class="row show"> 
            <a href="/cinemas/theater/<%= theater._id %>/<%= showtime._id %>">
                <img src="<%= showtime.movie.img %>" width="100px" class="card img">
                <h5><%= showtime.movie.name %></h5>
                <p><i class="far fa-calendar"></i> <%= showtime.date %></p>
                <p><i class="far fa-clock"></i> <%= showtime.time %></p>
            </a>
        </div>
            <% }); %>
        <hr>
    <% } %>
    <% }); %>

    </div>
</div>
<%- include('../partials/footer.ejs') %>