<%- include('../partials/header.ejs') %>

<div class="container-m">
	<div class="row justify-content-left">
	    <h1>Cinemas</h1>
        <% if(!currentUser) { %>
            <% cinema.forEach(function(cinema){ %>
                <a href="/cinemas/<%= cinema._id %>/user" class="card cinema_card">
                    <div class="row">
                        <div class='icon col-3'>
                            <i class="fas fa-video fa-2x text-dark"></i>
                        </div>
                        <div class='name col-4'>
                            <h2 class="card-title1 text-dark"><%= cinema.name %></h2>
                        </div>
                    </div>
                </a>
	    <% }); %> 
            <% } else { %> 
                <% if(currentUser.username != 'admin'){ %>

                    <% cinema.forEach(function(cinema){ %>
                        <a href="/cinemas/<%= cinema._id %>/user" class="card cinema_card">
                            <div class="row">
                                <div class='icon col-3'>
                                    <i class="fas fa-video fa-2x text-dark"></i>
                                </div>
                                <div class='name col-4'>
                                    <h2 class="card-title1 text-dark"><%= cinema.name %></h2>
                                </div>
                            </div>
                        </a>
                <% }); %>
                
                    <% } else { %>

                        <% cinema.forEach(function(cinema){ %>
                            <a href="/cinemas/<%= cinema._id %>" class="card cinema_card">
                                <div class="row">
                                    <div class='icon col-3'>
                                        <i class="fas fa-video fa-2x text-dark"></i>
                                    </div>
                                    <div class='name col-4'>
                                        <h2 class="card-title1 text-dark"><%= cinema.name %></h2>
                                    </div>
                                </div>
                            </a>
                    <% }); %> 

                <% } %>
            <% } %>
    </div>
</div>

<%- include('../partials/footer.ejs') %>